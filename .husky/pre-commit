echo "validation eslint and prettier"
npx eslint '**/*.{js,jsx,ts,tsx}' --quiet --fix || {
    echo "ðŸ˜¥ Eslint error Occured.... First fix the eslint error mentioned above then commit will be possible"
    exit 1
}
echo "ðŸ˜€ðŸ˜€ Eslint is good to go...."
